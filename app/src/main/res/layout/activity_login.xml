<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="28dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/frame_logo" >
        <ImageView
            android:layout_width="230dp"
            android:layout_height="210dp"
            android:id="@+id/logo_login"
            android:layout_gravity="center"
            android:src="@drawable/logo" />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Infra Analytical Tool"
        android:textColor="#FF9800"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="18dp" />
    <LinearLayout
        android:layout_marginTop="22dp"
        android:layout_marginHorizontal="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textColor="#000000"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/usernametext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Username"
            android:textSize="18sp"
            android:textColor="#FF7F48"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hitheretext" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:hintTextColor="#FF9800"
            android:hint="username@telkomsel.com">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/passwordtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Password"
            android:textSize="18sp"
            android:textColor="#FF7F48"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usernamesettext" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            app:hintTextColor="#FF9800"
            app:passwordToggleEnabled="true" >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="38dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_marginTop="45dp"
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:onClick="login"
            android:textColor="#ffff"
            android:textSize="18dp"
            android:paddingVertical="10dp"
            android:backgroundTint="#FF5722"
            />

    </LinearLayout>



</LinearLayout>